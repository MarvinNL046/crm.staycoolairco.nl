                <p className="text-2xl font-bold" style={{ color: colors.status.error }}>{formatCurrency(stats.overdue)}</p>
              </div>
              <Euro className="h-8 w-8" style={{ color: colors.status.error, opacity: 0.5 }} />
            </div>
          </div>
        </div>
      </section>

