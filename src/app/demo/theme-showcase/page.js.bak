                      {invoice.status === 'sent' && 'Verzonden'}
                      {invoice.status === 'paid' && 'Betaald'}
                      {invoice.status === 'overdue' && 'Verlopen'}
                    </span>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </section>

      {/* Form Inputs */}
      <section>
        <h2 className="text-xl font-semibold mb-4" style={{ color: colors.text.primary }}>
